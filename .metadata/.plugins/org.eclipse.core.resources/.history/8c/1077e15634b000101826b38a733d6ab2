	private static int banderaImagen;
	private static String nombreBandera;
	private static JRadioButton rdbtnOpcion1;
	private static JRadioButton rdbtnOpcion2;
	private static JRadioButton rdbtnOpcion3;
	private static JRadioButton rdbtnOpcion4;
	private static JRadioButton[] seleccion = {rdbtnOpcion1, rdbtnOpcion2, rdbtnOpcion3,rdbtnOpcion4};
	private static int correcto;
	private static final long serialVersionUID = 1L;
	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					JuegoDeBanderas frame = new JuegoDeBanderas();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	private static int nombreAzar() {
		int numero = (int)(Math.random() * ((PAISES_ISO.length - 1) - 0 + 1)) + 0;
		return numero;
	}
	private static void pais() {
		int numero = (int)(Math.random() * ((PAISES_ISO.length - 1) - 0 + 1)) + 0;
		banderaImagen = numero;
		nombreBandera = PAISES_NOMBRES[banderaImagen];
		
	}
	
	private static void pregunta() {
		boolean unico = false;
		int numero1 = (int)(Math.random() * (3 - 0 + 1)) + 0;
		if(!unico) {
			correcto = numero1;
			unico = true;
			seleccion[correcto].setText(nombreBandera);
		}
		int numero2 = (int)(Math.random() * (3 - 0 + 1)) + 0;
		if(numero2 != correcto) {
			int bandera1;
			do {
				bandera1 = nombreAzar();
				if(bandera1 != banderaImagen) {
					seleccion[numero2].setText(PAISES_NOMBRES[bandera1]);
				}
			}
			while(bandera1 == banderaImagen);
			int numero3 = (int)(Math.random() * (3 - 0 + 1)) + 0;
			if(numero3 != banderaImagen || numero3 != numero2) {
				int bandera2;
				do {
					bandera2 = nombreAzar();
					if(bandera2 != banderaImagen || bandera2 != bandera1) {
						seleccion[numero3].setText(PAISES_NOMBRES[bandera2]);
					}
				}
				while(bandera2 == banderaImagen || bandera2 == bandera1);
				int numero4 = (int)(Math.random() * (3 - 0 + 1)) + 0;
				if(numero4 != banderaImagen || numero4 != numero2 || numero4 != numero3) {
					int bandera3;
					do {
						bandera3 = nombreAzar();
						if(bandera3 != banderaImagen || bandera3 != bandera1 || bandera3 != bandera2) {
							seleccion[numero4].setText(PAISES_NOMBRES[bandera3]);
						}
					}
					while(bandera3 == banderaImagen || bandera3 == bandera2 || bandera3 == bandera1);
				}
			}
		}
	}
	public JuegoDeBanderas() {
		pais();
		pregunta();
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 784, 541);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JButton btnConfirmar = new JButton("Confirmar");
		btnConfirmar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				pais();
				pregunta();
				lblImagen.setIcon(new ImageIcon("C:\\Users\\Tarde\\Downloads\\Juego Banderas\\Imagenes\\" + PAISES_ISO[banderaImagen] + ".png"));
			}
		});
		btnConfirmar.setBounds(635, 459, 123, 32);
		contentPane.add(btnConfirmar);
		
		rdbtnOpcion1 = new JRadioButton("");
		rdbtnOpcion1.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				rdbtnOpcion2.setSelected(false);
				rdbtnOpcion3.setSelected(false);
				rdbtnOpcion4.setSelected(false);
			}
		});
		rdbtnOpcion1.setBounds(6, 310, 359, 66);
		contentPane.add(rdbtnOpcion1);
		
		rdbtnOpcion2 = new JRadioButton("");
		rdbtnOpcion2.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				rdbtnOpcion1.setSelected(false);
				rdbtnOpcion3.setSelected(false);
				rdbtnOpcion4.setSelected(false);
			}
		});
		rdbtnOpcion2.setBounds(367, 310, 395, 66);
		contentPane.add(rdbtnOpcion2);
		
		rdbtnOpcion3 = new JRadioButton("");
		rdbtnOpcion3.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				rdbtnOpcion2.setSelected(false);
				rdbtnOpcion1.setSelected(false);
				rdbtnOpcion4.setSelected(false);
			}
		});
		rdbtnOpcion3.setBounds(6, 379, 359, 66);
		contentPane.add(rdbtnOpcion3);
		
		rdbtnOpcion4 = new JRadioButton("");
		rdbtnOpcion4.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				rdbtnOpcion2.setSelected(false);
				rdbtnOpcion3.setSelected(false);
				rdbtnOpcion1.setSelected(false);
			}
		});
		rdbtnOpcion4.setBounds(367, 379, 395, 66);
		contentPane.add(rdbtnOpcion4);
		
		lblImagen = new JLabel("");
		lblImagen.setIcon(new ImageIcon("C:\\Users\\Tarde\\Downloads\\Juego Banderas\\Imagenes\\" + PAISES_ISO[banderaImagen] + ".png"));
		lblImagen.setHorizontalAlignment(SwingConstants.CENTER);
		lblImagen.setBounds(6, 11, 756, 342);
		contentPane.add(lblImagen);
	}
