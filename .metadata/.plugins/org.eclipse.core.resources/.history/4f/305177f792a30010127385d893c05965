package primero;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class DemoFileReaderWriter {
	public static void main(String[] args) throws IOException {
		FileWriter fw = new FileWriter("C:\\Users\\Tarde\\Downloads\\texto.txt");
		fw.write("Hola DAM");
		fw.close();
		FileReader fr = new FileReader("C:\\Users\\Tarde\\Downloads\\texto.txt");
		int c;
		while ((c = fr.read()) != -1) {
		System.out.print((char) c);
		}
		fr.close();
	}
}
