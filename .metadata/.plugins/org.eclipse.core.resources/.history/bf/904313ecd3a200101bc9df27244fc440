package primero;

import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class NumSecreto {
	static Scanner sc = new Scanner (System.in);
	static int numeroDeIntentos = 1;
	static int  numeroRandom = 0;
	public static void main(String[] args) throws IOException {
		pedirVerificar();
	}
	public static int numeroRandom() {
		int numeroRandom = 0 + (int)(Math.random() * ((1 - 0) + 1));
		return numeroRandom;
	}

	public static void pedirVerificar() throws IOException {
		numeroRandom = numeroRandom();
		System.out.print("Adivina el numero secreto: ");
		int numero = sc.nextInt();
		int verificar = 0;
		do {
			System.out.println("1");
			if(numero==numeroRandom) {
				System.out.println("Correcto");
				FileReader leer = new FileReader("C:\\Users\\Tarde\\Downloads\\record.txt");
				int caracter;
				String record = "";
				while ((caracter = leer.read()) != -1) {
					char c1 = (char)caracter;
					record = record + String.valueOf(c1);
				}
				leer.close();
				int numRecord = Integer.parseInt(record);
				if(numeroDeIntentos < numRecord) {
					System.out.println("--Has superado un nuevo record.Felicidades--");
					FileWriter escribir = new FileWriter("C:\\Users\\Tarde\\Downloads\\record.txt");
					escribir.write(record);
					escribir.close();
				}
				System.out.print("Â¿Quieres seguir jugando?(Si/No): ");
				String seguir = sc.nextLine();
				System.out.println("\n");
				if(seguir.equals("Si") || seguir.equals("SI") || seguir.equals("si")) {
					numeroDeIntentos = 0;
					numeroRandom = numeroRandom();
					System.out.print("Adivina el numero secreto: ");
					numero = sc.nextInt();
				}
				else if(seguir.equals("No") || seguir.equals("NO") || seguir.equals("no")) {
					System.out.println("Hasta la proxima");
					verificar = 1;
					
				}
			}
			else {
				numeroDeIntentos++;
				System.out.print("Intento " + numeroDeIntentos + ": ");
				numero = sc.nextInt();
			}
		}
		while(verificar != 1);
	}
}
