package primero;

import java.awt.Color;
import java.awt.EventQueue;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.image.BufferedImage;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import java.awt.event.MouseMotionAdapter;

public class pr2 extends JFrame {

	private static final long serialVersionUID = 1L;
	private MiPanel contentPane;
	private BufferedImage ventana;
	private Graphics2D grafico;
	private int x,y;
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					pr2 frame = new pr2();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public pr2() {
		
		
		contentPane = new MiPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		getContentPane().addMouseMotionListener(new MouseMotionAdapter() {
			@Override
			public void mouseDragged(MouseEvent e) {
				x = e.getX();
				y = e.getY();
				dibujar(x,y);
			}
		});
		getContentPane().addMouseListener(new MouseAdapter() {
			@Override
			public void mousePressed(MouseEvent e) {
				x = e.getX();
				y = e.getY();
				dibujar(x,y);
			}
		});
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		ventana = new BufferedImage(450,300,BufferedImage.TYPE_INT_RGB);
		grafico = ventana.createGraphics();
		grafico.setColor(Color.WHITE);
		grafico.fillRect(0, 0, ventana.getWidth(), ventana.getHeight());
	}
	private void dibujar(int x, int y) {
		grafico.setColor(Color.BLACK);
		grafico.fillOval(x - 5, y - 5, 10, 10);
		contentPane.repaint();
	}
	private class MiPanel extends JPanel{
		protected void paintComponent(Graphics g) {
			super.paintComponent(g);
			g.drawImage(ventana, 0, 0, null);
		}
	}
}
